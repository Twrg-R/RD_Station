    $("#rd-text_area_field-kb7gxssy").keydown(function (event) {
        if($(this).val().length <= 999){
            $('#rd-button-joq3m2m7').attr('disabled', true)
        } else{
           $('#rd-button-joq3m2m7').attr('disabled', false)



        }
        
        if ($(this).val().length == 1500) { 
            return false;
        } else {
            return true;
        }

    });
});
